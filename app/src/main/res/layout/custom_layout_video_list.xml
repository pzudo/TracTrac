<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/videolistshape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/playicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"
            android:tint="#019FC2"
            app:srcCompat="@drawable/play_icon"
    />


    <ImageView
            android:id="@+id/flagicon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/playicon"
            android:tint="#015A84"
            app:srcCompat="@drawable/ic_flag_black_24dp"
            android:layout_alignParentTop="true"
    />
    <TextView
            android:id="@+id/racenr"
            android:text="Race 100"
            android:textSize="25dp"
            android:textColor="#019FC2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/flagicon"
            android:layout_marginStart="27dp"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/trophy"
            android:id="@+id/trophy"
            android:tint="#ffcf40"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="44dp"/>


</RelativeLayout>