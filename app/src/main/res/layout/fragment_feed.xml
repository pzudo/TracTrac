<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".home.FeedFragment">

    <ImageView
            android:id="@+id/feed_detail_image"
            android:transitionName="@string/transition_feed_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="top"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/feed_detail_ScrollView"
            android:paddingTop="120dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="8dp"
            android:background="@color/offWhite">

        <TextView
                android:id="@+id/feed_detail_title"
                android:transitionName="@string/transition_feed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:elevation="4dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@color/colorPrimary"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/feed_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:background="@color/colorPrimary"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/feed_detail_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

    </LinearLayout>
        </ScrollView>

</FrameLayout>