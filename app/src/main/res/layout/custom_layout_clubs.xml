<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/clubsimage"
            android:divider="@android:color/transparent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:dividerHeight="3dp"
            android:padding="5dp"
            android:background="@drawable/imageview_border"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/clubstitle"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="#019FC2"
            android:text="title"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:layout_toEndOf="@+id/clubsimage"
            android:layout_marginStart="44dp"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"/>


    <TextView
            android:id="@+id/clubssports"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="#019FC2"
            android:text="sport"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="39dp"
            android:layout_toEndOf="@+id/clubsimage"
            android:layout_marginStart="44dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"/>


    <TextView
            android:id="@+id/clubscountry"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="#019FC2"
            android:text="country"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/clubsimage"
            android:layout_marginStart="44dp"
            android:layout_marginTop="77dp"
            android:layout_alignParentTop="true"/>

    <ImageView
            android:id="@+id/titleicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="0dp"
            android:tint="#015A84"
            app:srcCompat="@drawable/clubs_title_icon"
            android:layout_marginTop="17dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/clubsimage"
            android:layout_alignParentTop="true"
    />

    <ImageView
            android:id="@+id/sporticon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="#015A84"
            app:srcCompat="@drawable/category_icon_24dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="7dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/clubsimage"/>

    <ImageView
            android:id="@+id/countryicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:tint="#015A84"
            app:srcCompat="@drawable/location"
            android:layout_marginBottom="-205dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/clubsimage"/>

</RelativeLayout>