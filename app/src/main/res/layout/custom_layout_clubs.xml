<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <ImageView
                android:id="@+id/clubsimage"
                android:divider="@android:color/transparent"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:dividerHeight="3dp"
                android:padding="5dp"
                android:background="@drawable/imageview_border"
                app:srcCompat="@mipmap/ic_launcher"/>

    <LinearLayout android:layout_width="182dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="10dp">

        <TextView
                android:id="@+id/clubstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#019FC2"
                android:textSize="17sp"/>

        <ImageView
                android:id="@+id/titleicon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginBottom="0dp"
                android:tint="#015A84"
                app:srcCompat="@drawable/ic_event_black_24dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/clubssports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#019FC2"
                android:textSize="17sp"/>

        <ImageView
                android:id="@+id/sporticon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginBottom="0dp"
                android:tint="#015A84"
                app:srcCompat="@drawable/category_icon_24dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/clubscountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#019FC2"
                android:textSize="17sp"/>

        <ImageView
                android:id="@+id/countryicon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="4dp"
                android:tint="#015A84"
                app:srcCompat="@drawable/ic_flag_black_24dp"
                android:layout_marginBottom="-205dp"/>

    </LinearLayout>

</RelativeLayout>
