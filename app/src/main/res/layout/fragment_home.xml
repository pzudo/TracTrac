<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="group7.tractrac.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/events_near_you_button"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:drawableRight="@drawable/ic_my_location_black_24dp"
                android:drawableTint="#FFFFFF"
                android:text="@string/events_near_you"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"/>
        </RelativeLayout>
        
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/imageLoader"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:lottie_fileName="splashy_loader.json"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_colorFilter="@color/colorPrimary"
                android:layout_gravity="center"
        />

        <ListView
            android:id="@+id/news_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:elevation="2dp"
        />

    </LinearLayout>

</FrameLayout>